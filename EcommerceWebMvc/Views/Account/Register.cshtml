@model RegisterDto

<div class="row justify-content-center mt-5">
    <div class="col-lg-6">
        <div class="card shadow-lg">
            <div class="card-body p-4">
                <h2 class="text-center text-primary mb-4">Créez votre compte</h2>
                <p class="text-center text-muted">Remplissez vos coordonnées pour vous inscrire.</p>
                <hr />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <form method="post">
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Prénom</label>
                        <div class="col-sm-8">
                            <input class="form-control rounded-pill" asp-for="FirstName" placeholder="Entrez votre prénom" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Nom*</label>
                        <div class="col-sm-8">
                            <input class="form-control rounded-pill" asp-for="LastName" placeholder="Entrez votre nom" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Email*</label>
                        <div class="col-sm-8">
                            <input class="form-control rounded-pill" asp-for="Email" placeholder="Entrez votre email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Téléphone</label>
                        <div class="col-sm-8">
                            <input class="form-control rounded-pill" asp-for="PhoneNumber" placeholder="Entrez votre numéro de téléphone" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Adresse*</label>
                        <div class="col-sm-8">
                            <input class="form-control rounded-pill" asp-for="Address" placeholder="Entrez votre adresse" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Mot de passe*</label>
                        <div class="col-sm-8">
                            <input class="form-control rounded-pill" type="password" asp-for="Password" placeholder="Entrez un mot de passe sécurisé" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Confirmez le mot de passe*</label>
                        <div class="col-sm-8">
                            <input class="form-control rounded-pill" type="password" asp-for="ConfirmPassword" placeholder="Entrez à nouveau votre mot de passe" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="offset-sm-4 col-sm-4 d-grid">
                            <button type="submit" class="btn btn-primary rounded-pill">S'inscrire</button>
                        </div>
                        <div class="col-sm-4 d-grid">
                            <a class="btn btn-outline-secondary rounded-pill" asp-controller="Home" asp-action="Index" role="button">Annuler</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
