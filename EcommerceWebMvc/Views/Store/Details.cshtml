@model Product

<div class="container py-4">
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="/products/@Model.ImageFileName" class="img-fluid mb-3 rounded shadow" alt="Image produit" width="250" />
        </div>
        <div class="col-md-8">
            <h3 class="mb-3 text-primary">@Model.Name</h3>
            <h3 class="mb-3 text-success">@(Model.Price) TND</h3>
            <button type="button" class="btn btn-warning btn-lg" onclick="addToCart(this, @Model.Id)">
                Ajouter au panier <i class="bi bi-cart4"></i>
            </button>

            <hr class="my-4" />

          

            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">
                    Catégorie
                </div>
                <div class="col-sm-9">
                    @Model.Category
                </div>
            </div>

            <div class="fw-bold">Description</div>
            <div class="bg-light p-3 rounded">@Model.Description</div>
        </div>
    </div>
</div>
